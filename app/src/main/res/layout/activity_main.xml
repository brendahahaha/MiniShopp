<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#f2cfa4"
    >

    <TextView
        android:id="@+id/breadshirt_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- 𝙘𝙤𝙤𝙡 𝙏-𝙨𝙝𝙞𝙧𝙩𝙨 -"
        android:textSize="40dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:background="#fffff6ea"
        android:layout_margin="20dp"
        android:textStyle="bold|italic"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text=" online stock: December 15th - december 16th"
        android:textAllCaps="true"
        android:layout_gravity="center"
        android:textStyle="bold|italic" />

    <ImageView
        android:id="@+id/bread"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/breadyshirt"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_gravity="center"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:hint= "Name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="limited addition: bread shirt ($25)"
        android:textAllCaps="true"
        android:layout_gravity="center"
        android:textStyle="bold|italic"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Quantity"
        android:textAllCaps="true"
        android:layout_gravity="center"
        android:textStyle="bold|italic"
        />

    <CheckBox
        android:id="@+id/shipping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" One-day shipping ($0)"
        android:layout_marginLeft="90dp" />

    <CheckBox
        android:id="@+id/warranty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Warranty ($0)"
        android:layout_marginLeft="120dp"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

    <Button
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:onClick="decrease"
        android:text="-"
        android:layout_marginLeft="130dp"
        />

    <TextView
        android:id="@+id/quantity_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="1"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <Button
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:onClick="increase"
        android:text="+" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Price"
            android:textAllCaps="true"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/price_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="$ 25"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_gravity="center"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:onClick="submitOrder"
            android:text="Order"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="limited addition: bread shirt ($25) This t-shirt is worth more than  your house. But be glad we're selling these t-shirts for a price of $25 freaking dollars (without warranty and one-day shipping). Buy it while it lasts brother."
            android:textAllCaps="true"
            android:layout_gravity="center"
            android:padding="20dp"
            android:textStyle="bold|italic" >

        </TextView>

    </LinearLayout>

</LinearLayout>
</ScrollView>